<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="16dp">

    <!-- Header with Back Arrow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F4A8D8"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:contentDescription="Back"
            android:src="@drawable/flecha_regreso" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:text="Editar Proyecto"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="78dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="#8BC34A"
            android:padding="12dp"
            android:text="Guardar"
            android:textColor="#000000"
            android:textSize="10sp"
            app:backgroundTint="#8BC34A" />
    </LinearLayout>

    <!-- Project Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del proyecto:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IA neuromedicine"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Project Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción del Proyecto:"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Objetivo..."
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Financing Objective -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Objetivo de Financiación:"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/financing_objective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Objetivo..."
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Deadline -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Límite de Recaudación:"
        android:textSize="16sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25/12/2024"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Add Images Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar imágenes:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="82dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Existing Image -->
        <ImageView
            android:id="@+id/existing_image"
            android:layout_width="81dp"
            android:layout_height="57dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imagen existente"
            android:layout_marginTop="2dp"
            android:src="@drawable/upload" />

        <!-- Add New Image Button -->
    </LinearLayout>

    <!-- Add Videos Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar videos:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginBottom="24dp"
        android:background="#E0E0E0"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Add New Video Button -->
        <ImageView
            android:id="@+id/add_video_button"
            android:layout_width="81dp"
            android:layout_height="57dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Subir video"
            android:src="@drawable/upload" />
    </LinearLayout>


</LinearLayout>
