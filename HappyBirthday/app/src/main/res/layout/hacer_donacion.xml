<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="16dp">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F4A8D8"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:contentDescription="Back"
            android:src="@drawable/flecha_regreso" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="43dp"
            android:text="Realizar Donación"
            android:textSize="25sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Form Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#f5f5f5"
        android:layout_gravity="center">

        <!-- Información de contacto -->

        <!-- Nombre Completo -->

        <!-- Correo Electrónico -->

        <!-- Número de Teléfono -->

        <!-- Datos de la donación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Datos de la donación:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="10dp" />

        <!-- Dinero en Cartera Digital -->

        <!-- Dinero a Donar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Dinero a Donar:"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/donation_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:text="$5" />

        <!-- Botón Donar -->
        <Button
            android:id="@+id/btn_donate"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:background="#8BC34A"
            android:text="¡Donar!"
            android:textColor="#000000"
            app:backgroundTint="#8BC34A" />
    </LinearLayout>
</LinearLayout>
</ScrollView>