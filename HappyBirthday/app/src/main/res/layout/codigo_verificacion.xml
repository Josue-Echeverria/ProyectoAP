<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="16dp">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F4A8D8"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="44dp"
            android:layout_height="43dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:contentDescription="Back"
            android:src="@drawable/flecha_regreso" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="73dp"
            android:text="Verificación"
            android:textSize="25sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Form Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:layout_gravity="center">

        <!-- Código de Verificación -->

        <!-- Numeric Keypad -->
        <EditText
            android:id="@+id/verification_code"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:hint="Código de verificación"
            android:inputType="number"
            android:maxLength="6"
            android:textAlignment="center"
            android:textSize="18sp" />

        <GridLayout
            android:id="@+id/numeric_keypad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:rowCount="4"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            android:padding="16dp">

            <!-- Botones del Teclado Numérico -->
            <!-- Número 1 -->
            <Button
                android:id="@+id/btn_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 2 -->
            <Button
                android:id="@+id/btn_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 3 -->
            <Button
                android:id="@+id/btn_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 4 -->
            <Button
                android:id="@+id/btn_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 5 -->
            <Button
                android:id="@+id/btn_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 6 -->
            <Button
                android:id="@+id/btn_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 7 -->
            <Button
                android:id="@+id/btn_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 8 -->
            <Button
                android:id="@+id/btn_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Número 9 -->
            <Button
                android:id="@+id/btn_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Espacio vacío (Placeholder) -->
            <Space
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <!-- Número 0 -->
            <Button
                android:id="@+id/btn_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="24sp"
                app:backgroundTint="#1F685F5F" />

            <!-- Espacio vacío (Placeholder) -->
            <Space
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </GridLayout>

        <!-- Botón Verificar -->
        <Button
            android:id="@+id/btn_verify"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#8BC34A"
            android:text="Verificar"
            android:textColor="#000000"
            app:backgroundTint="#8BC34A" />
    </LinearLayout>
</LinearLayout>
